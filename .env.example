# ===================================
# Конфигурация сервера
# ===================================

# Порт сервера (по умолчанию: 3000)
PORT=3000

# Окружение Node.js (development, production, test)
NODE_ENV=development

# ===================================
# Конфигурация Yandex Cloud
# ===================================

# API ключ для доступа к Yandex Cloud
# Получите его из консоли управления: https://console.cloud.yandex.ru/
YANDEX_API_KEY=your_api_key_here

# ID вашего каталога в Yandex Cloud
# Найдите в консоли или через команду: yc config get folder-id
YANDEX_CATALOGUE_ID=your_catalogue_id_here

# URL эндпоинта YandexGPT API
# Обычно не требует изменений
YANDEX_MODEL_URL=https://llm.api.cloud.yandex.net/foundationModels/v1/completion

# Модель для использования (yandexgpt, yandexgpt-lite, yandexgpt-pro, yandexgpt-32k)
YANDEX_MODEL=yandexgpt

# ===================================
# Параметры генерации
# ===================================

# Температура для генерации ответов (0.0 - 1.0)
# Меньше = более детерминированные ответы, Больше = более креативные
TEMPERATURE=0.3

# Максимальное количество токенов в ответе
MAX_TOKENS=1024

# ===================================
# Настройки приложения
# ===================================

# Включить CORS (true/false)
CORS_ENABLED=false

# Уровень логирования (debug, info, warn, error)
LOG_LEVEL=info
